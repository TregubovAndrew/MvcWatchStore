<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Watch Store Online</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet"/>
    <script src="~/Scripts/jquery-ui-1.11.4.min.js"></script>
    <link href="~/Content/themes/base/autocomplete.css" rel="stylesheet" />
    <link href="~/Content/themes/base/theme.css" rel="stylesheet" />
    <link href="~/Content/themes/base/core.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.4.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
</head>
<body>
<div class="container">
    <header>
        @Html.Action("Summary", "Cart")

        @if (Request.IsAuthenticated)
        {
            <div class="navbar-brand">Ваш логин: @User.Identity.Name</div>
            <div> @Html.ActionLink("Sign out", "Logoff", "Account")</div>
        }
        else
        {
            <div>@Html.ActionLink("Sign in", "Login", "Account")</div>
        }
        <div style="text-align: center">
            <img src="../../Content/images/Logo/Logo.png"/>
        </div>
    </header>
    <div class="row ">
        <div>
            @Html.Action("Menu", "Nav")
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
</div>
    <script src="~/Scripts/watchStoreSrcipts.js"></script>
</body>
</html>